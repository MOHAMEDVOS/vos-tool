# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values

# AWS Configuration
aws_region = "us-east-1"
environment = "prod"
project_name = "vos-tool"

# Network Configuration
vpc_cidr = "10.0.0.0/16"

# ECS Configuration
ecs_cpu = 4096          # 4 vCPUs
ecs_memory = 16384      # 16 GB RAM
ecs_desired_count = 2   # Number of running instances

# RDS Configuration
db_name = "vos_tool"
db_username = "vos_user"
rds_min_capacity = 0.5  # Minimum Aurora capacity
rds_max_capacity = 4    # Maximum Aurora capacity

# Application Secrets (REQUIRED)
readymode_username = "your_readymode_username"
readymode_password = "your_readymode_password"

# Optional: Custom domain and SSL
# domain_name = "vos.yourdomain.com"
# ssl_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/12345678-1234-1234-1234-123456789012"
